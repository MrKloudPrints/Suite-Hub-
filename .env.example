# ──────────────────────────────────────────────
# Environment Variables
# Copy this to .env and fill in real values
# ──────────────────────────────────────────────

# Database — PostgreSQL connection string
# Local dev:   postgresql://user:password@localhost:5432/payroll
# Railway:     (auto-provided as DATABASE_URL)
# Neon/Supabase: (copy from dashboard)
DATABASE_URL="postgresql://user:password@localhost:5432/payroll"

# NextAuth — MUST be a strong random secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="CHANGE_ME_TO_A_RANDOM_64_CHAR_STRING"
NEXTAUTH_URL="https://yourdomain.com"

# QuickBooks Online Integration
# Get production credentials from developer.intuit.com
QUICKBOOKS_CLIENT_ID="your_production_client_id"
QUICKBOOKS_CLIENT_SECRET="your_production_client_secret"
QUICKBOOKS_REDIRECT_URI="https://yourdomain.com/api/quickbooks/callback"
QUICKBOOKS_ENVIRONMENT="production"
